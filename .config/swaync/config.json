{
  "$schema": "/etc/xdg/swaync/configSchema.json",

  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 5,
  "control-center-margin-left": 0,
  "control-center-width": 400,
  "control-center-height": 800,
  "fit-to-screen": false,

  "layer": "top",
  "cssPriority": "user",
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,

  "widgets": [
    "buttons-grid",
    "title",
    "notifications",
    "dnd",
    "mpris",
    "volume"
  ],
  "widget-config": {
    "buttons-grid": {
      "actions": [
        {
          "label": "󰤨  Wifi",
          "type": "toggle",
          "active": true,
          "command": "bash ~/.config/swaync/qs.sh toggle wifi",
          "update-command": "bash ~/.config/swaync/qs.sh query wifi"
        },
        {
          "label": "󰂯 BT",
          "type": "toggle",
          "active": false,
          "command": "bash ~/.config/swaync/qs.sh toggle bluetooth",
          "update-command": "bash ~/.config/swaync/qs.sh query bluetooth"
        },
        {
          "label": "󰀝 Airplane",
          "type": "toggle",
          "active": false,
          "command": "bash ~/.config/swaync/qs.sh toggle airplane",
          "update-command": "bash ~/.config/swaync/qs.sh query airplane"
        },
        {
          "label": "󱩌 Dim",
          "type": "toggle",
          "active": false,
          "command": "bash ~/.config/swaync/qs.sh toggle nightlight",
          "update-command": "bash ~/.config/swaync/qs.sh query nightlight"
        },
        {
          "label": "󰖂 VPN",
          "type": "toggle",
          "active": false,
          "command": "bash ~/.config/swaync/qs.sh toggle vpn",
          "update-command": "bash ~/.config/swaync/qs.sh query vpn"
        },
        {
          "label": "󰖔 Theme",
          "type": "toggle",
          "active": false,
          "command": "bash ~/.config/swaync/qs.sh toggle darkmode",
          "update-command": "bash ~/.config/swaync/qs.sh query darkmode"
        }
      ]
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "show-album-art": "when-available",
      "loop-carousel": true
    },
    "volume": {
      "label": " ",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": true
    },
    "backlight": {
      "label": "󰃠 ",
      "min": 0,
      "subsystem": "backlight"
    }
  }
}
